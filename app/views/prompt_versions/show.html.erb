<h2 class="text-2xl mb-4"><%= @prompt_version.prompt.title %></h2>
<div class="flex flex-col md:flex-row justify-start items-start">
  <div class="prompt bg-white rounded-lg shadow-md p-6 flex flex-col items-start md:w-1/2 md:mr-2">
    <h2 class="text-xl text-gray-600 font-medium mb-2">This version</h2>
    <div class="text-sm text-gray-400 mb-2">
      <%= @prompt_version.created_at.strftime('%B %e, %l:%M %p') %>
      <br/>
      <%= @prompt_version.user.email %>
    </div>
    <div class="font-mono text-gray-600 text-lg mb-4">
      <%= raw @diff_split.right if @previous_version %>
    </div>
  </div>

  <% if @previous_version %>
    <div class="prompt bg-white rounded-lg shadow-md p-6 flex flex-col items-start md:ml-2 md:w-1/2 mt-6 md:mt-0">
      <h2 class="text-xl text-gray-600 font-medium mb-4">Previous version</h2>
      <div class="text-sm text-gray-400 mb-2">
        <%= @previous_version.created_at.strftime('%B %e, %l:%M %p') %>
        <br/>
        <%= @previous_version.user.email %>
      </div>
      <div class="font-mono text-gray-600 text-lg mb-4">
        <%= raw @diff_split.left if @previous_version %>
      </div>
    </div>
  <% end %>
</div>
