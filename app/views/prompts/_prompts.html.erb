<% @prompts.each do |prompt| %>
  <%= link_to prompt, data: { turbo_frame: "_top" }, class: "prompt bg-white rounded-lg shadow-md p-6 cursor-pointer flex flex-col items-start mb-4" do %>
    <p class="text-xl mb-4"><%= prompt.title %></p>
    <p class="text-gray-600 mb-3 font-mono"><%= truncate(prompt.prompt_versions.order(:version_number).last.text, length: 120, separator: ' ', omission: '...') %></p>
    <p class="text-sm text-gray-400"><%= prompt.prompt_versions.first.user.email %></p>
  <% end %>
<% end %>
