<div class="flex justify-between items-center mb-6">
  <h1 class="font-medium text-4xl">Prompts</h1>
  <%= link_to 'New prompt', new_prompt_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>
<% if @prompts.length > 0 %>
  <div class="mb-6 flex items-center">

    <div class="flex items-center" data-controller="checkbox">
      <input type="checkbox" id="show-archived" data-checkbox-target="checkbox" class="rounded-sm border border-gray-300 mr-2"/>
      <label for="show-archived">Show archived</label>
    </div>
  </div>
<% end %>

<% if @prompts.length > 0 %>
  <div class="grid grid-cols-1 sm:gap-3 sm:grid-cols-2 md:grid-cols-3 md:gap-6">
    <%= render 'prompts' %>
  </div>
<% else %>
  <div class="text-center mt-24">
    <p class="text-gray-500">No prompts
      yet. <%= link_to 'Create a prompt', new_prompt_path, class: 'text-black hover:underline' %></p>
  </div>
<% end %>
