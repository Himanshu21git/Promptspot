<div class="flex justify-end mb-12">
  <%= link_to 'New test', new_test_suite_path, class: "flex items-center justify-center rounded-md py-2 px-3 bg-blue-50 dark:bg-slate-700 dark:border-slate-500 dark:text-white border border-blue-200 text-blue-600 dark:hover:bg-slate-600 hover:bg-white font-medium cursor-pointer " %>
</div>
<% if @test_suites.length > 0 %>
  <div class="flex flex-col">
    <% @test_suites.each do |test_suite| %>
      <%= render 'test_suite', test_suite: test_suite %>
    <% end %>
  </div>
<% else %>
  <div class="flex w-full justify-center items-center">
